<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net452;netstandard2.0</TargetFrameworks>
    <AssemblyName>NServiceBus.Raw</AssemblyName>
    <RootNamespace>NServiceBus.Raw</RootNamespace>
    <AssemblyTitle>NServiceBus.Raw</AssemblyTitle>
    <Product>NServiceBus.Raw</Product>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>NServiceBus.Raw.snk</AssemblyOriginatorKeyFile>
    <OutputPath>..\..\binaries\</OutputPath>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="GitVersionTask" Version="4.0.0-*" PrivateAssets="All" />
    <PackageReference Include="NServiceBus" Version="[7.0.0-*, 8.0.0)" />
  </ItemGroup>

  <PropertyGroup>
    <Description>Use NServiceBus infrastructure to send raw messages</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>
</Project>